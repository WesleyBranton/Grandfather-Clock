{
    "manifest_version": 2,
    "name": "Grandfather Fox",
    "version": "2.0",
    "description": "Turn Firefox into a grandfather clock that plays a tune at the top of each hour!",

    "icons": {
        "32": "icons/icon-32.png",
        "48": "icons/icon-48.png",
        "64": "icons/icon-64.png",
        "96": "icons/icon-96.png",
        "128": "icons/icon-128.png"
    },
    
    "background": {
        "scripts": [ "lib/idb-file-storage.js", "background.js" ]
    },
    
    "options_ui": {
        "page": "options/options.html"
    },
    
    "browser_action": {
        "default_icon": "icons/icon-animated.gif",
        "default_title": "Grandfather Fox"
    },

    "permissions": [
        "alarms",
        "storage",
        "webNavigation",
        "unlimitedStorage"
    ]
}